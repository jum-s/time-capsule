#!/usr/bin/env sh

mkdir -p "./extension/icons"

logobase="./logo/star-sablier"
prodbase="./extension/icons/time-capsule"

# Chrome doesn't like SVG :/
gm convert -background none "${logobase}-blue-yellow.svg" -resize 16x16 "${prodbase}-16.png"
gm convert -background none "${logobase}-grey-2.svg" -resize 16x16 "${prodbase}-disabled-16.png"
gm convert -background none "${logobase}-blue-yellow.svg" -resize 32x32 "${prodbase}-32.png"
gm convert -background none "${logobase}-grey-2.svg" -resize 32x32 "${prodbase}-disabled-32.png"
gm convert -background none "${logobase}-blue-yellow.svg" -resize 48x48 "${prodbase}-48.png"
gm convert -background none "${logobase}-grey-2.svg" -resize 48x48 "${prodbase}-disabled-48.png"
gm convert -background none "${logobase}-blue-yellow.svg" -resize 92x92 "${prodbase}-92.png"
gm convert -background none "${logobase}-grey-2.svg" -resize 92x92 "${prodbase}-disabled-92.png"
